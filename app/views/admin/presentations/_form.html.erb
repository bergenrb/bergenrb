<%= simple_form_for [:admin, @presentation], :validate => true do |form| %>
  <%= form.input :title %>
  <%= form.input :presenter_names, :label => 'Presenters', :hint => 'seperate names with a comma' %>
  <%= form.input :description, :as => :text %>
  <%= form.input :video_url, :label => 'Video URL' %>
  <%= form.input :slides_url, :label => 'Slides URL' %>
  <%= form.input :meetup_url, :label => 'Meetup URL' %>
  <%= form.input :presented_at, :label => 'Presented At', :as => :string, :input_html => { :class => 'date-field' } %>
  <%= form.submit 'Save Presentation' %>
<% end %>
